<!-- views/partials/weather.hbs -->
<div class="bg-gray-100 p-4 rounded-lg shadow-md w-full">
  <h2 class="text-2xl font-bold mb-2 text-center">Weather</h2>
  {{#if weather}}
    <p class="text-sm text-center">{{weather.name}}</p>
    <p class="text-4xl font-bold text-center">{{weather.main.temp}}Â°</p>
    <div class="flex items-center justify-center space-x-2">
      <!-- OpenWeatherMap Icon -->
      <img id="weatherIcon" alt="Weather icon" class="w-8 h-8" src="http://openweathermap.org/img/wn/{{weather.weather.[0].icon}}@2x.png">
      <p class="text-lg">{{weather.weather.[0].description}}</p>
    </div>
    <p class="text-sm">Wind: {{weather.wind.speed}} mph</p>
    <p class="text-sm">Humidity: {{weather.main.humidity}}%</p>
    <p class="text-sm">AQI: {{airQuality}}</p>
    {{#if error}}
      <p class="text-red-500 font-bold">{{error}}</p>
    {{/if}}
  {{else}}
    <p id="await-message" class="text-center">Awaiting weather data...</p>
  {{/if}}
</div>