
<div class="flex min-h-screen">
  <!-- Sidebar -->
  <aside class="bg-blue-100 px-4">
    {{> nav}}
  </aside>

  <!-- Main Content -->

    <!-- Header -->
  <main class="flex-grow p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Social</h1>
      {{>notification}}
    </div>

    <!-- Sub Navigation Bar -->
    <div class="max-w-6xl mx-auto">
      <div id="sub-nav-bar" class="mb-6 flex justify-center">
        <nav class="flex gap-4">
          <a href="/social/recent" 
             class="sub-nav-button px-8 py-3 bg-white text-gray-700 hover:bg-gray-200 rounded-lg text-lg font-medium shadow">
            Recent
          </a>
          <a href="/social/friends" 
             class="sub-nav-button px-8 py-3 bg-white text-gray-700 hover:bg-gray-200 rounded-lg text-lg font-medium shadow">
            Friends
          </a>
        </nav>
      </div>

      <!-- Content Section -->
      <div class="rounded-lg border p-6 bg-white shadow-sm">
        {{#if (eq activeTab "recent")}} 
          {{> recent}} 
        {{/if}}
        {{#if (eq activeTab "friends")}} 
          {{> friends}} 
        {{/if}}
      </div>
    </div>
  </main>
</div>

