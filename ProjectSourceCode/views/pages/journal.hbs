<div class="flex">
  <aside class="bg-blue-100 px-4 w-55 flex-shrink-0">
    <!-- Nav bar -->
    {{>nav}}
  </aside>
  <main class="flex-grow p-6">  
    <div id="journal-entries-list" >
      <h2 class="text-2xl font-semibold mb-4">Journal Entries</h2>

      <!-- Journal Modal Partial -->
      {{> add-journal-modal this}}

      <!-- Render Journal Entries -->
      <div id="journal-list">
        {{#if journals.length}}
          {{#each journals}}
            {{> journal-card}}
          {{/each}}
        {{else}}
          <p class="text-center py-4 text-gray-500">No journal entries logged yet.</p>
        {{/if}}
      </div>
    </div>
  <main>
</div>