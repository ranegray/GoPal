<div class="min-h-screen bg-[url('/images/grass.jpg')] flex items-center justify-center p-4">
  <div class="bg-white rounded-3xl w-full max-w-4xl m-height-4xl flex flex-col flex-row p-4">
    <!-- Left Section - Logo and Description -->
    <div class="p-8 md:w-1/2 flex flex-col items-center justify-center text-center">
      <h1 class="text-5xl font-bold mb-8">GoPal</h1>
      <div class="w-32 h-32 bg-gray-200 rounded-full mb-8"></div>
      <p class="text-gray-700">
        Description
      </p>
    </div>
    
    <!-- Right Section - Registration Form -->
    <div class="md:w-1/2">
    {{>message}}
      <div class="bg-gradient-to-b from-green-100 to-blue-100 p-8 rounded-xl drop-shadow-md">
        <h2 class="text-2xl font-bold mb-6">Create your account</h2>
        
        <form id = 'register_form' class="space-y-4" method='POST' action="/register">
          <div>
            <input 
              required
              id="email" 
              name="email"
              type="email" 
              placeholder="Email" 
              class="w-full px-4 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-200"
              >
          </div>
          
          <div>
            <input 
              required
              id="username" 
              name="username"
              type="text" 
              placeholder="Username" 
              class="w-full px-4 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-200"
            >
          </div>

          <div>
            <input
              required
              id="password" 
              name="password"
              type="password" 
              placeholder="Password" 
              class="w-full px-4 py-3 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-200"
            >
            <p id="password-error" class="text-sm text-red-500 mt-2 ml-3 hidden">Password must be at least 8 characters long, include one uppercase letter, one lowercase letter, one number, and one special character.</p>
          </div>
          
          <div class="pt-4">
            <button 
              type="submit" 
              class="w-full bg-blue-300 hover:bg-blue-400 text-black font-semibold py-3 px-6 rounded-full transition duration-300"
            >
              Sign Up
            </button>
          </div>
        </form>
      </div>
      <div class="p-2 text-center text-sm">
        Already have an account? Login <a href="/login" class="text-blue-500 hover:underline">here</a>.
        </div>
      </div>
  </div>
</div>
<script src="/js/password_error.js"></script>